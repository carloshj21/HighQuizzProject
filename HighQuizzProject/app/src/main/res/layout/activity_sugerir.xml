<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¡SUGIERE TU PREGUNTA!"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Pregunta:"
        android:textColor="@color/black"
        android:layout_marginTop="55dp"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/edtPreguntaSugerida"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Escribe tu pregunta"
        android:textSize="20sp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Materia:"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        android:textSize="20sp" />

    <Spinner
        android:id="@+id/spinMateriaSugerida"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Opciones:"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="a)"
            android:textSize="25sp"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/edtOpASugerida"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Opción A"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="b)"
            android:textSize="25sp"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/edtOpBSugerida"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Opción B"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="c)"
            android:textSize="25sp"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/edtOpCSugerida"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Opción C"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="d)"
            android:textSize="25sp"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/edtOpDSugerida"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Opción D"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="20sp"
            android:text="Respuesta Correcta:"
            android:textColor="@color/black" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/spinResCorrectaSug"
            android:layout_marginLeft="40dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/btnRegresarSugerencia"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:textSize="20sp"
            android:gravity="center"
            android:text="Regresar"
            app:backgroundTint="#51AA12"
            app:cornerRadius="20dp"
            android:layout_marginLeft="35dp"/>

        <Button
            android:id="@+id/btnGuardarSugerencia"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:textSize="20sp"
            android:gravity="center"
            android:text="Guardar"
            app:backgroundTint="#51AA12"
            app:cornerRadius="20dp"
            android:layout_marginLeft="40dp"/>

    </LinearLayout>


</LinearLayout>