<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/fondo_fragment_inicio"
    >


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="118dp"
        android:layout_height="104dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"


        app:layout_constraintBottom_toTopOf="@+id/textView2"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.499"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/portada" />

    <Button
        android:id="@+id/btnExamen"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnPreguntas"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="64dp"
        android:layout_marginRight="64dp"
        android:text="Examen Prueba"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:backgroundTint="#51AA12"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toTopOf="@+id/btnSugerir"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.533" />

    <Button
        android:id="@+id/btnPreguntas"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Preguntas"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:backgroundTint="#51AA12"
        app:cornerRadius="20dp"

        app:layout_constraintBottom_toTopOf="@+id/btnSugerir"
        app:layout_constraintEnd_toStartOf="@+id/btnExamen"
        app:layout_constraintHorizontal_bias="0.352"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.533" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:fontFamily="cursive"
        android:gravity="center_horizontal"
        android:text="HighQuizz"
        android:textColor="@color/black"
        android:textSize="60dp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.559" />

    <Button
        android:id="@+id/btnSugerir"
        android:layout_width="336dp"
        android:layout_height="47dp"
        android:layout_centerHorizontal="true"
        android:text="Sugiere tu pregunta"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:backgroundTint="#31680B"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.711" />

</androidx.constraintlayout.widget.ConstraintLayout>